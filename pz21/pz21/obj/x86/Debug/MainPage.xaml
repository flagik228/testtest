<Page MaxHeight="1200" MaxWidth="1600"
    x:Class="pz21.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pz21"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:ConnectionId='2' x:Name="ParentGrid" >
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Width="750">
                <TextBlock Text="Name: " FontSize="50" Margin="20,400,0,0" HorizontalAlignment="Right"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Actual Width:" FontSize="40" Margin="20,0,0,0"/>
                    <TextBlock FontSize="40" Text="{Binding ElementName=nameTextBox, Path=ActualWidth}" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBox x:ConnectionId='3' x:Name="nameTextBox" FontSize="50" Width="500" Height="100" Margin="100,400,0,0"></TextBox>

                <Button x:ConnectionId='4' x:Name="SubmitButton" Height="100" Width="400" Content="Submit" FontSize="50"                            Margin="100,30,0,0"></Button>
            </StackPanel>
        </StackPanel>

            

        </Grid>
</Page>

